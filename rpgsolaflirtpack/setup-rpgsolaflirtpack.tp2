END

COPY_EXISTING ~SOLA.DLG~ ~override~
 DECOMPILE_DLG_TO_D
 REPLACE_TEXTUALLY "IF ~True()~ THEN BEGIN 130" "IF ~False()~ THEN BEGIN 130"
 COMPILE_D_TO_DLG

COMPILE ~rpgsolaflirtpack/RPGSolaFlirts.d~

EXTEND_TOP ~sola.bcs~ ~rpgsolaflirtpack/RPGSola.baf~

