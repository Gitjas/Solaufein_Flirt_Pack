VERSION ~v1.1~

LANGUAGE ~English~ ~english~ ~rpgsolaflirtpack/English/setup.tra~

BEGIN @1

ACTION_IF FILE_EXISTS ~override/RPGSolaFlirtPack.rpgd~
THEN BEGIN
  FAIL @2
END ELSE BEGIN
